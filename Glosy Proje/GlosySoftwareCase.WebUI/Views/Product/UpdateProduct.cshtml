@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_UILayout.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="ProductID"/>
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <br />
    <label>Ürün Fiyatı</label>
    <input type="text" asp-for="ProductPrice" class="form-control" />
    <br />
    <label>Ürün Adeti</label>
    <input type="text" asp-for="ProductAmount" class="form-control" />
    <br />
    <label>Ürün Detay</label>
    <input type="text" asp-for="ProductDetail" class="form-control" />
    <br />
    <button class="btn btn-outline-dark">Kaydet</button>
</form>

